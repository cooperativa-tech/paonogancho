{
  "browserslist": "ie 11",
  "scripts": {
    "dev": "NODE_ENV=development snowpack dev",
    "optimize-fonts": "subfont $(find build -name '*.html') --harfbuzz  --in-place --no-fallbacks --inline-fonts --inline-css --font-display block",
    "build": "NODE_ENV=production yarn eleventy && NODE_ENV=production snowpack build && yarn optimize-fonts",
    "format": "prettier --write \"assets/**/*.js\" *.js \"assets/**/*.css\"",
    "lint": "prettier --check \"assets/**/*.js\" *.js \"assets/**/*.css\""
  },
  "dependencies": {
    "animejs": "^3.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-run-script": "^2.3.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.11",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.4.1",
    "snowpack": "^3.8.8",
    "subfont": "^6.4.0",
    "tailwindcss": "^2.2.19"
  }
}
