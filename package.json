{
  "browserslist": "ie 11",
  "scripts": {
    "dev": "NODE_ENV=development snowpack dev",
    "optimize-fonts": "subfont $(find build -name '*.html') --in-place --no-fallbacks --inline-fonts --inline-css --font-display block",
    "build": "NODE_ENV=production snowpack build && yarn optimize-fonts",
    "format": "prettier --write \"src/**/*.js\" *.js \"src/**/*.css\"",
    "lint": "prettier --check \"src/**/*.js\" *.js \"src/**/*.css\""
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@snowpack/plugin-postcss": "^1.0.7",
    "@snowpack/plugin-run-script": "^2.2.0",
    "@snowpack/plugin-webpack": "^2.1.1",
    "autoprefixer": "^10.0.2",
    "cssnano": "^4.1.10",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^13.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^5.0.1",
    "prettier": "^2.2.0",
    "snowpack": "^2.17.1",
    "subfont": "^5.2.2",
    "tailwindcss": "^2.0.1"
  }
}
