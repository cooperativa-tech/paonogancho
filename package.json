{
  "browserslist": "ie 11",
  "scripts": {
    "dev": "NODE_ENV=development snowpack dev",
    "optimize-fonts": "subfont $(find build -name '*.html') --in-place --no-fallbacks --inline-fonts --inline-css --font-display block",
    "build": "NODE_ENV=production snowpack build && yarn optimize-fonts",
    "format": "prettier --write \"src/**/*.js\" *.js \"src/**/*.css\"",
    "lint": "prettier --check \"src/**/*.js\" *.js \"src/**/*.css\""
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/plugin-webpack": "^2.3.0",
    "autoprefixer": "^10.2.5",
    "cssnano": "^4.1.10",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-import": "^14.0.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.2.1",
    "snowpack": "^3.0.13",
    "subfont": "^5.3.0",
    "tailwindcss": "^2.0.3"
  }
}
